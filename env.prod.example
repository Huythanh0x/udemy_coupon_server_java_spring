# Production .env for docker-compose.prod.yml
# Copy to /opt/training-coupon/.env

# Docker images (set automatically by webhook, defaults for manual deploy)
BASE_IMAGE_NAME=huythanh0x/training-coupon-services
API_IMAGE_TAG=api-main
CRAWLER_IMAGE_TAG=crawler-main

# Spring
SPRING_PROFILES_ACTIVE=prod

# Database
SPRING_DATASOURCE_USERNAME=
SPRING_DATASOURCE_PASSWORD=

# Basic Auth
SPRING_SECURITY_USER_NAME=
SPRING_SECURITY_USER_PASSWORD=

# JWT (must be at least 32 chars, generate: openssl rand -base64 32)
CUSTOM_JWT_SECRET=
CUSTOM_JWT_EXPIRATION=86400000

# Redis
SPRING_DATA_REDIS_PASSWORD=

